<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Dashboard.Home.RulesAndRegulationFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:id="@+id/top_header"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Please Fill It Correctly"
                    android:textColor="@color/text_color_primary"
                    android:layout_marginLeft="8dp"
                    android:layout_marginTop="2dp"
                    android:fontFamily="@font/poppins_regular"
                    android:textSize="18dp"/>

    <FrameLayout
        android:visibility="invisible"
        android:id="@+id/male_frame"
        android:layout_below="@id/top_header"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
        android:id="@+id/first"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginTop="10dp"
        app:cardElevation="10dp"
                app:cardBackgroundColor="@color/global_background"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/disease_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/poppins_light"
                android:text="Do you have any Chronic Kidney/ heart / lung / liver disease ?"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/disease_text_Yes"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginBottom="8dp"
                android:layout_marginTop="16dp"
                app:neumorph_shapeType="flat"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"
                        android:textColor="@color/green"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/disease_text_No"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                app:neumorph_shapeType="flat"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"
                        android:textColor="@color/red"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
        android:id="@+id/second"
        android:layout_width="match_parent"
        android:layout_height="150dp"
                app:cardBackgroundColor="@color/global_background"
        android:layout_marginTop="18dp"
        app:cardElevation="10dp"
        android:layout_below="@+id/first"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/cancer_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="12dp"
                android:fontFamily="@font/poppins_light"
                android:text="Are you a Cancer Survivor ?"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cancer_text_Yes"
                android:layout_width="150dp"
                android:layout_height="50dp"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="8dp"
                app:neumorph_shapeType="flat"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="YES"
                        android:textColor="@color/green"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

            <soup.neumorphism.NeumorphCardView
                android:id="@+id/cancer_text_No"
                android:layout_width="150dp"
                android:layout_marginTop="16dp"
                android:layout_height="50dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="8dp"
                app:neumorph_shapeType="flat"
                android:layout_marginBottom="8dp"
                android:layout_alignParentBottom="true">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="NO"
                        android:textColor="@color/red"
                        android:layout_centerHorizontal="true"
                        android:layout_centerVertical="true"/>

                </RelativeLayout>

            </soup.neumorphism.NeumorphCardView>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
        android:id="@+id/three"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/second"
        app:cardElevation="10dp"
                app:cardBackgroundColor="@color/global_background"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="8dp"
        app:cardCornerRadius="10dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/weight_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Your Weight:"
                android:fontFamily="@font/poppins_light"
                android:textColor="@color/black"
                android:textSize="18dp"/>

            <EditText
                android:id="@+id/weight_text_male"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/weight_text"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:inputType="number"
                android:padding="8dp"
                android:hint="Weight"/>

        </RelativeLayout>

    </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/final_text_male"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/three"
        android:layout_margin="10dp"
        android:padding="5dp"
        android:textStyle="bold"
                android:fontFamily="@font/poppins_light_italic"
        android:textColor="@drawable/gradient1"
        android:text="*You can only donate Plasma if you are complete resolution of symptomps at least 28 days before donation"/>


            <soup.neumorphism.NeumorphButton
                android:id="@+id/donate_male"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/final_text_male"
                style="@style/Widget.Neumorph.Button"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Donate Plasma"
                android:layout_marginTop="12dp"
                app:neumorph_lightSource="rightTop"
                android:textColor="@color/design_default_color_primary"
                app:neumorph_shapeType="basin"
                android:textSize="22dp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </FrameLayout>

    <FrameLayout
        android:id="@+id/female_frame"
        android:visibility="visible"
        android:layout_below="@id/top_header"
        android:layout_marginTop="5dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/female_first"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="8dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/global_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/female_Pregnant_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:text="Do you ever been pregnant?"
                        android:textColor="@color/black"
                        android:fontFamily="@font/poppins_light"
                        android:textSize="18dp"/>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/female_Pregnant_text_Yes"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        app:neumorph_shapeType="flat"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YES"
                                android:textColor="@color/green"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/female_Pregnant_text_No"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="12dp"
                        android:layout_marginBottom="8dp"
                        app:neumorph_shapeType="flat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NO"
                                android:textColor="@color/red"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </soup.neumorphism.NeumorphCardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/female_second"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                app:cardBackgroundColor="@color/global_background"
                android:layout_marginTop="10dp"
                android:layout_below="@id/female_first"
                app:cardElevation="10dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/female_disease_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="12dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Do you have any Chronic Kidney/ heart / lung / liver disease ?"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/female_disease_text_Yes"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        app:neumorph_shapeType="flat"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YES"
                                android:textColor="@color/green"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/female_disease_text_No"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginBottom="8dp"
                        app:neumorph_shapeType="flat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NO"
                                android:textColor="@color/red"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </soup.neumorphism.NeumorphCardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/female_third"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                app:cardBackgroundColor="@color/global_background"
                android:layout_below="@+id/female_second"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/female_cancer_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Are you a Cancer Survivor ?"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/female_cancer_text_Yes"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        app:neumorph_shapeType="flat"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="YES"
                                android:textColor="@color/green"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </soup.neumorphism.NeumorphCardView>

                    <soup.neumorphism.NeumorphCardView
                        android:id="@+id/female_cancer_text_No"
                        android:layout_width="150dp"
                        android:layout_height="50dp"
                        android:layout_marginTop="16dp"
                        app:neumorph_shapeType="flat"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent">

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="NO"
                                android:textColor="@color/red"
                                android:layout_centerHorizontal="true"
                                android:layout_centerVertical="true"/>

                        </RelativeLayout>

                    </soup.neumorphism.NeumorphCardView>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/female_forth"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                app:cardElevation="10dp"
                android:layout_below="@id/female_third"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/global_background"
                app:cardCornerRadius="10dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">

                    <TextView
                        android:id="@+id/female_weight_text"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_margin="8dp"
                        android:fontFamily="@font/poppins_light"
                        android:text="Your Weight:"
                        android:textColor="@color/black"
                        android:textSize="18dp"/>

                    <EditText
                        android:id="@+id/female_weight_text_female"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/female_weight_text"
                        android:layout_marginLeft="8dp"
                        android:inputType="number"
                        android:layout_marginRight="8dp"
                        android:layout_marginBottom="8dp"
                        android:padding="8dp"
                        android:hint="Weight"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <TextView
                android:id="@+id/final_text_female"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/female_forth"
                android:layout_margin="10dp"
                android:padding="5dp"
                android:fontFamily="@font/poppins_light_italic"
                android:textStyle="bold"
                android:textColor="@drawable/gradient1"
                android:text="*You can only donate Plasma if you are complete resolution of symptomps at least 28 days before donation"/>


            <soup.neumorphism.NeumorphButton
                android:id="@+id/donate_female"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_below="@+id/final_text_female"
                style="@style/Widget.Neumorph.Button"
                android:layout_marginRight="50dp"
                android:layout_marginLeft="50dp"
                android:text="Donate Plasma"
                android:layout_marginTop="12dp"
                app:neumorph_lightSource="rightTop"
                android:textColor="@color/design_default_color_primary"
                app:neumorph_shapeType="basin"
                android:textSize="22dp"
                android:fontFamily="@font/poppins_light"
                android:layout_marginBottom="10dp"
                android:textAllCaps="false"
                android:textAlignment="center"
                android:layout_alignParentBottom="true"/>

        </RelativeLayout>

    </FrameLayout>

            </RelativeLayout>

        </LinearLayout>

    </ScrollView>



</RelativeLayout>