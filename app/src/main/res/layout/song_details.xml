<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.motion.widget.MotionLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@color/black2"
    app:layoutDescription="@xml/song_details_scene">




    <ImageView
        android:id="@+id/details_song"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:padding="5dp"
        android:src="@drawable/ic_baseline_view_headline_24" />




    <ImageView
        android:id="@+id/song_image"
        android:layout_width="45dp"
        android:layout_height="45dp"
        android:layout_marginLeft="10dp"
        android:src="@drawable/asal_mai"
        android:layout_marginTop="7.5dp"
        app:layout_constraintLeft_toRightOf="@+id/details_song"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/song_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="15dp"
        android:fontFamily="@font/comfortaa"
        android:maxLength="15"
        android:maxLines="1"
        android:paddingTop="5dp"
        android:text="Asal Mein"
        android:textColor="@color/white"
        android:textSize="18dp"
        app:layout_constraintLeft_toRightOf="@+id/song_image" />

    <TextView
        android:id="@+id/singer_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="4dp"
        android:maxLength="15"
        android:maxLines="1"
        android:text="Darshan Raval"
        android:textColor="@color/white"
        app:layout_constraintTop_toBottomOf="@+id/song_name"
        app:layout_constraintLeft_toRightOf="@+id/song_image" />

    <ImageView
        android:id="@+id/cross"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_marginRight="25dp"
        android:src="@drawable/ic_baseline_clear_24"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/movie"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Movie : ALBUM"
        android:textColor="@color/white"
        android:layout_marginTop="0dp"
        android:visibility="invisible"
        android:fontFamily="@font/poppins_light"
        android:textSize="16dp"
        android:paddingLeft="8dp"/>

    <TextView
        android:id="@+id/type"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Type : Classic"
        android:layout_marginTop="0dp"
        android:visibility="invisible"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:fontFamily="@font/poppins_light"
        android:paddingLeft="8dp"/>

    <TextView
        android:id="@+id/release"
        android:visibility="invisible"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:text="Date : 21st Nov 2019"
        android:layout_marginTop="0dp"
        android:fontFamily="@font/poppins_light"
        android:textColor="@color/white"
        android:textSize="16dp"
        android:paddingLeft="8dp"/>


</androidx.constraintlayout.motion.widget.MotionLayout>