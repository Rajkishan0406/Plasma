<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authentication.SplashFragment">

    <ImageView
        android:layout_width="110dp"
        android:layout_height="80dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/other_half"
        android:layout_marginBottom="45dp"
        android:src="@drawable/ic_baseline_format_color_reset_24"/>


   <LinearLayout
       android:id="@+id/other_half"
       android:layout_width="wrap_content"
       android:orientation="horizontal"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"
       app:layout_constraintRight_toRightOf="parent"
       app:layout_constraintLeft_toLeftOf="parent"
       android:layout_marginTop="80dp"
       android:layout_height="wrap_content">

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:textColor="@color/red_light"
           android:textSize="34dp"
           android:fontFamily="@font/comfortaa"
           android:text="P"/>

       <TextView
           android:layout_width="wrap_content"
           android:layout_height="wrap_content"
           android:fontFamily="@font/comfortaa"
           android:textSize="24dp"
           android:text="lasma Donation"
           android:textColor="@color/red_light"/>

   </LinearLayout>

    <TextView
        android:id="@+id/app"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/other_half"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="4dp"
        android:textColor="@color/red_light"
        android:fontFamily="@font/comfortaa"
        android:text="Application"/>

</androidx.constraintlayout.widget.ConstraintLayout>