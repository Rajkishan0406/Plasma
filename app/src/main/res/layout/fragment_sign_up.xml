<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".Authentication.SignUpFragment">

    <FrameLayout
        android:id="@+id/SignUpFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="600dp"
            android:layout_marginTop="-100dp"
            app:cardCornerRadius="60dp"
            app:cardBackgroundColor="@color/green_text_color"
            >

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/image_cardview"
                android:layout_width="70dp"
                android:layout_centerHorizontal="true"
                app:cardCornerRadius="50dp"
                android:layout_marginTop="130dp"
                android:layout_height="70dp">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_baseline_format_color_reset_24"/>

            </androidx.cardview.widget.CardView>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/image_cardview"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="12dp"
                    android:textColor="@color/white"
                    android:fontFamily="@font/comfortaa"
                    android:textSize="18dp"
                    android:text="Plasma Donation"/>


            </RelativeLayout>
        </androidx.cardview.widget.CardView>

    </RelativeLayout>
    </FrameLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_above="@id/signup_card"
            android:layout_marginLeft="28dp"
            android:textSize="32dp"
            android:layout_marginBottom="2dp"
            android:text="SignUp"
            android:fontFamily="@font/poppins_light"
            android:textColor="@color/white"/>


    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="380dp"
        app:cardCornerRadius="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="100dp"
        android:alpha="0.95"
        android:id="@+id/signup_card"
        android:layout_marginRight="25dp"
        android:layout_marginLeft="25dp"
        app:cardElevation="12dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_below="@+id/text_login"
            android:id="@+id/emialll"
            android:textColor="@color/text_color_primary"
            android:layout_marginTop="18dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:hint="Email"
            app:boxStrokeColor="@color/purple_200"
            android:textColorHint="@color/text_color_primary"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:inputType="textEmailAddress"
                android:fontFamily="@font/poppins_light"
                android:drawableStart="@drawable/custome_email_icon"
                android:drawablePadding="6dp"/>

        </com.google.android.material.textfield.TextInputLayout>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:id="@+id/passworddd"
            android:layout_height="wrap_content"
            android:layout_below="@+id/emialll"
            android:layout_marginRight="10dp"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:layout_marginTop="18dp"
            android:textColorHint="@color/text_color_primary"
            app:boxStrokeColor="@color/purple_200"
            android:hint="Password"
            app:passwordToggleEnabled="true"
            android:layout_marginLeft="10dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:textColor="@color/black"
                android:layout_height="match_parent"
                android:fontFamily="@font/poppins_light"
                android:drawableStart="@drawable/custome_lock_icon"
                android:inputType="textPassword"
                android:drawablePadding="6dp"/>

        </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/passworddd"
                android:layout_marginRight="10dp"
                app:boxCornerRadiusBottomEnd="10dp"
                android:id="@+id/passworddd2"
                app:boxCornerRadiusBottomStart="10dp"
                app:boxCornerRadiusTopStart="10dp"
                app:boxCornerRadiusTopEnd="10dp"
                android:layout_marginTop="18dp"
                android:hint="Confirm Password"
                android:textColorHint="@color/text_color_primary"
                app:boxStrokeColor="@color/purple_200"
                android:layout_marginLeft="10dp"
                app:passwordToggleEnabled="true"
                style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/password_conf"
                    android:layout_width="match_parent"
                    android:textColor="@color/black"
                    android:layout_height="match_parent"
                    android:fontFamily="@font/poppins_light"
                    android:drawableStart="@drawable/custome_lock_icon"
                    android:inputType="textPassword"
                    android:drawablePadding="6dp"/>

            </com.google.android.material.textfield.TextInputLayout>

        <ProgressBar
            android:id="@+id/signup_progress_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_above="@+id/signup_btn"
            android:layout_marginBottom="8dp"
            android:visibility="invisible"/>


            <soup.neumorphism.NeumorphButton
                android:id="@+id/signup_btn"
                style="@style/Widget.Neumorph.Button"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_alignParentBottom="true"
                android:layout_marginLeft="50dp"
                android:layout_marginRight="50dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/poppins_light"
                android:text="Signup"
                android:textAlignment="center"
                android:textAllCaps="false"
                android:textColor="@color/design_default_color_primary"
                android:textSize="25dp"
                app:neumorph_backgroundColor="@color/normal_card_background"
                app:neumorph_lightSource="rightTop"
                app:neumorph_shapeType="flat" />

        </RelativeLayout>

    </com.google.android.material.card.MaterialCardView>



    </RelativeLayout>

</androidx.constraintlayout.widget.ConstraintLayout>