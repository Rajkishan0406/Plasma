<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="bottom"
    android:layout_height="360dp"
    android:background="@color/white"
    tools:context=".Authentication.ForgotPassword">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="8dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="10dp"
            android:textColor="@color/text_color_primary"
            android:text="Forgot Password"
            android:fontFamily="@font/poppins_regular"
            android:textSize="28dp"/>

        <com.google.android.material.textfield.TextInputLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:boxCornerRadiusBottomEnd="10dp"
            app:boxCornerRadiusBottomStart="10dp"
            app:boxCornerRadiusTopStart="10dp"
            app:boxCornerRadiusTopEnd="10dp"
            android:hint="Email"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:textColorHint="@color/text_color_primary"
            android:layout_marginTop="8dp"
            app:boxStrokeColor="@color/purple_200"
            android:layout_marginBottom="25dp"
            style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.Dense">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/email"
                android:layout_width="match_parent"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_baseline_email_24"
                android:fontFamily="@font/poppins_light"
                android:layout_height="wrap_content"/>

        </com.google.android.material.textfield.TextInputLayout>

        <soup.neumorphism.NeumorphButton
            android:id="@+id/cardview_forgot_password_button"
            android:layout_width="match_parent"
            android:layout_height="70dp"
            style="@style/Widget.Neumorph.Button"
            android:layout_marginRight="50dp"
            android:fontFamily="@font/poppins_light"
            android:layout_marginLeft="50dp"
            android:text="Send"
            app:neumorph_backgroundColor="@color/normal_card_background"
            app:neumorph_lightSource="rightTop"
            android:textColor="@color/design_default_color_primary"
            app:neumorph_shapeType="basin"
            android:textSize="24dp"
            android:textAllCaps="false"
            android:textAlignment="center"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"/>


        <ProgressBar
            android:id="@+id/cardview_forgot_password_progressbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="invisible"
            android:layout_marginTop="5dp"/>

    </LinearLayout>





</androidx.constraintlayout.widget.ConstraintLayout>